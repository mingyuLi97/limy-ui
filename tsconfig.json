{
  "compilerOptions": {
    "outDir": "lib/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/limy-ui/*"],
      "@cli/*": ["packages/limy-cli/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["packages/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
